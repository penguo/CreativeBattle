<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     
    <item android:state_enabled="false">     
        <shape android:padding="0dp" android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
    </item>
    <item android:state_enabled="true">     
        <shape android:padding="0dp" android:shape="rectangle">
            <solid android:color="@color/colorClickable" />
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
    </item>
    <item android:state_selected="true">     
        <shape android:padding="0dp" android:shape="rectangle">
            <solid android:color="@color/colorClicked" />
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
    </item>

</selector>